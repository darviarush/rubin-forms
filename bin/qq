#!/usr/bin/env perl
# Запуск команд

BEGIN {
#use File::Basename qw/dirname/;
#use lib dirname(__FILE__)."/../lib";
#chdir(dirname(__FILE__)."/..");
chdir "$`/.." if $0 =~ /\/[^\/]*$/;
}

use lib "lib";
use R::App;
use common::sense;



my $qq = shift @ARGV;

msg(":empty magenta", "use: ", ":cyan", "qq snippet"), exit if !$qq;

$qq = "eval" if $qq eq "-e";
$qq = "eval_and_print" if $qq eq "-p";

$app->qq->$qq(@ARGV);