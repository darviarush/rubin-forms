#!/bin/bash

echo "Отключён"
exit

main=/cygdrive/c/rea/emls
html=$main/html
app=$html/app
sprite=$main/script/build_sprite
nginx_conf=/usr/local/nginx/conf/nginx.conf

if [ -d $app ]; then

	name=`git diff | sed -r "/^[^+-]/d" | head -n 3 | tail -n 1`

	git add .
	git commit -am "save prev $name"

	cp $html/themes/2012-03/css/* design/e-css
	cp $sprite.* design
	cp $nginx_conf design

	rsync -uhtpr $app design

	for i in lib test maps; do
		i=coffee/$i.coffee
		rsync -uhtp $app/$i public/$i
	done
	
	for i in test.html ctest.js; do
		i=test/$i
		rsync -uhtp $app/$i public/$i
	done
	
	rsync -uhtpr $app/css public/
	rsync -uhtpr public/css $app/
	
	rsync -uhtpr $app/js/lib public/js/
fi


git status
git add .

name=`git diff | sed -r "/^[^+-]/d" | head -n 3 | tail -n 1`
git commit -am "save $name"
git push
